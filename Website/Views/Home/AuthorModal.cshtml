@using Website.Controllers
@model Author

@{
    bool isNew = ViewBag.IsNew == true;
}

<div class="modal-header">
    <h5 class="modal-title">@(isNew ? "Add" : "Edit") Author</h5>
    <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
        <i class="fa-solid fa-xmark"></i>
    </button>
</div>
<div class="modal-body">
    <form class="container" asp-action="@nameof(HomeController.UpdateAuthor)">
        @if (!isNew)
        {
            <input type="hidden" asp-for="author_id" />
        }
        <div class="form-group mb-2">
            <label asp-for="first_name"></label>
            <input type="text" asp-for="first_name" class="form-control" placeholder="@Html.DisplayNameFor(m => m.first_name)" />
            <span class="text-danger" asp-validation-for="first_name"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="last_name"></label>
            <input type="text" asp-for="last_name" class="form-control" placeholder="@Html.DisplayNameFor(m => m.last_name)" />
            <span class="text-danger" asp-validation-for="last_name"></span>
        </div>
        <hr />
        @if (Model.books != null)
        {
            <h4>Books</h4>
            <ul>
                @foreach (var book in Model.books)
                {
                    <li>@book.title</li>
                }
            </ul>
        }
        else
        {
            <span>No books.</span>
        }
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button id="btnSave" type="button" class="btn btn-success">Save</button>
</div>
